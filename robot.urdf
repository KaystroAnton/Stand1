<robot name="2wheeledRobot">

<material name="black">
    <color rgba="0 0 0 1"/>
</material>

<material name="white">
    <color rgba="1 1 1 1"/>
</material>

<material name="gray">
    <color rgba="0.4 0.4 0.4 1"/>
</material>

<material name="blue">
    <color rgba="0.0 0.0 1.0 1"/>
</material>

 <link name="corpus">
        <visual>
            <geometry>
                <box size="0.4 0.2 0.05"/>
            </geometry>
            <origin xyz="0.0 0.0 0" rpy="0 0 0" />
            <material name="gray"/>
        </visual>
         <collision>
            <origin xyz="0.0 0.0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.4 0.2 0.05"/>
            </geometry>
         </collision>
         <inertial>
            <mass value="1"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
 </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="3"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.06" length="0.05"/>
            </geometry>
         </collision>
    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.05"/>
            </geometry>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="3"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
        <collision>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.06" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <link name="center_wheel">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="3"/>
            <inertia ixx="0"  ixy="0."  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
        <collision>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
    </link>
    <joint name="corpus_to_right_wheel" type="revolute">
        <parent link="corpus"/>
        <child link="left_wheel"/>
        <origin xyz="-0.1 -0.125 -0.025" rpy="0 -1.5707 -1.5707"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="0" friction="0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <joint name="corpus_to_left_wheel" type="revolute">
        <parent link="corpus"/>
        <child link="right_wheel"/>
        <origin xyz="-0.1 0.125 -0.025" rpy="0 -1.5707 -1.5707"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="0" friction="0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <joint name="corpus_to_center_wheel" type="spherical">
        <parent link="corpus"/>
        <child link="center_wheel"/>
        <origin xyz="0.1 0 -0.055" rpy="0 0 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="0" friction="0"/>
        <axis xyz="1 1 1"/>
    </joint>


</robot>